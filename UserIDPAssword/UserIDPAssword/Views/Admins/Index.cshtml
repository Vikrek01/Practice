<table class="display" id="abc">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.First().Password)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.First().GmailConfirm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Leave)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Password)
                </td>*@
                <td>
                    @*  @Html.DisplayFor(modelItem => item.GmailConfirm, new { style = "color:green !important;" })
                    *@



                    @{ bool isConfirmed = item.GmailConfirm == "Approved";
                    }
                    @if (isConfirmed)
                    {
                        <p style="color:green">@Html.DisplayFor(modelItem => item.GmailConfirm)</p>

                    }
                    else
                    {
                        <p style="color:red">@Html.DisplayFor(modelItem => item.GmailConfirm)</p>

                    }
                </td>
                <td>

                    @{ bool isLeave = item.Leave == "No leave";
                    }
                    @if (isLeave)
                    {
                        <p style="color:green">@Html.DisplayFor(modelItem => item.Leave)</p>

                    }
                    else
                    {
                        <p style="color:red">@Html.DisplayFor(modelItem => item.Leave)</p>

                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

